	char s_email[50];
	char s_mobile[50];
}shopkeeper_details;

shopkeeper_details b[100];

struct Item{
    char item_name[50];
    int price;
};


struct Shop{
	struct Item item[100];
	int num_items;
};

struct Shop a[100];

details s[100];

